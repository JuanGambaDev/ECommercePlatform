# Etapa de construcci贸n
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /app

# Copiar el archivo de proyecto y restaurar las dependencias
COPY UserService.csproj .
RUN dotnet restore

# Copiar el resto de los archivos y compilar el proyecto
COPY . .

# Ejecutar la publicaci贸n del proyecto y almacenar los archivos en '/app/publish'
RUN dotnet publish -c Release -o /app/publish

# Etapa de ejecuci贸n
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app

# Copiar los archivos publicados desde la etapa de construcci贸n
COPY --from=build /app/publish .

# Exponer los puertos
EXPOSE 5240
EXPOSE 5241

# Configurar el comando de inicio
ENTRYPOINT ["dotnet", "UserService.dll"]
